{
  "name": "claude-bailout-monitor",
  "displayName": "Claude Bailout Monitor",
  "description": "Monitors terminal output for AI coding assistant bailout patterns based on research showing 46-65% accuracy rates",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Machine Learning"
  ],
  "keywords": [
    "ai",
    "claude",
    "code-quality",
    "monitoring",
    "terminal"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "claudeBailoutMonitor.enable",
        "title": "Enable Bailout Monitoring"
      },
      {
        "command": "claudeBailoutMonitor.disable", 
        "title": "Disable Bailout Monitoring"
      },
      {
        "command": "claudeBailoutMonitor.showStats",
        "title": "Show Detection Statistics"
      }
    ],
    "configuration": {
      "title": "Claude Bailout Monitor",
      "properties": {
        "claudeBailoutMonitor.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable bailout pattern detection"
        },
        "claudeBailoutMonitor.sensitivity": {
          "type": "string",
          "enum": ["low", "medium", "high"],
          "default": "medium",
          "description": "Detection sensitivity level"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
